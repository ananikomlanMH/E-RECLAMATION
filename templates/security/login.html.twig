<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Ministère des finances | Login</title>
    <link rel="stylesheet" href="{{ asset('assets/css/Old/app.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/simplebar.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/tom-select.css') }}">
    <link rel="shortcut icon" href="{{ asset('assets/img/logo.png') }}" type="image/x-icon">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body style="">
<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 class="h2">Bienvenue , E-Reclamation.</h1>
                        <p class="lead">
                            Connectez-vous à votre compte pour continuer
                        </p>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-4">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% endif %}
                                <div class="text-center">
                                    <img src="{{ asset('assets/img/logo.png') }}" alt="Charles Hall" class="img-fluid" width="132" height="132" />
                                </div>
                                <form method="post" class="mt-4">
                                    <div class="mb-3">
                                        <label class="form-label">Email</label>
                                        <input class="form-control form-control-lg" type="email" name="email" placeholder="Entrer votre Email"  required autofocus/>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Password</label>
                                        <input class="form-control form-control-lg" type="password" name="password" placeholder="Entrer votre mot de passe" required  />
                                        <small class="mt-4">
                                            <a href="#">Mot de passe oublié?</a>
                                        </small>
                                    </div>
                                    <div>
                                        <label class="form-check">
                                            <input class="form-check-input" type="checkbox" value="remember-me" name="remember-me" checked>
                                            <span class="form-check-label">
              Se Souvenir de moi
            </span>
                                        </label>
                                    </div>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                    <div class="text-center mt-3">
                                        <button style="width: 100%;" type="submit" class="btn btn-lg btn-primary">Se Connecter</button>
                                    </div>
                                    <p class="mt-3 text-center">
                                        Vous n'avez pas encore de compte ? <a href="{{ path("app_register") }}">S'incrire</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

<script src="{{ asset('assets/js/app.js') }}"></script>
<script src="{{ asset('assets/js/simplebar.min.js') }}"></script>
<script src="{{ asset('assets/js/tom-select.complete.min.js') }}"></script>

</body>
</html>
