<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Ministère des finances | Login</title>
    <link rel="stylesheet" href="{{ asset('assets/css/Old/app.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/simplebar.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/tom-select.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/Old/style.css') }}">
    <link rel="shortcut icon" href="{{ asset('assets/img/logo.png') }}" type="image/x-icon">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body style="">
<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 class="h2">Bienvenue , E-Reclamation.</h1>
                        <p class="lead">
                            Créer votre compte pour continuer.
                        </p>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-4">
                                <div class="text-center">
                                    <img src="{{ asset('assets/img/logo.png') }}" alt="Charles Hall" class="img-fluid" width="132" height="132" />
                                </div>
                                {{ form_start(registrationForm) }}
                                {{ form_row(registrationForm.matricule, {label: 'Matricule'}) }}
                                {{ form_row(registrationForm.name, {label: 'Nom'}) }}
                                {{ form_row(registrationForm.surname, {label: 'Prénom'}) }}
                                {{ form_row(registrationForm.genre) }}
                                {{ form_row(registrationForm.telephone, {label: 'Téléphone'}) }}
                                {{ form_row(registrationForm.adresse, {label: 'Adresse'}) }}
                                {{ form_row(registrationForm.email) }}
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Password'
                                }) }}
                                {{ form_row(registrationForm.agreeTerms, {
                                    label: "J'accepte les conditions d'utlisation."
                                }) }}
                                <div class="text-center mt-3">
                                    <button style="width: 100%;" type="submit" class="btn btn-lg btn-primary">S'inscrire</button>
                                </div>
                                <p class="mt-3 text-center">
                                    Vous avez deja un compte ? <a href="{{ path("app_login") }}">Se connecter</a>
                                </p>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

<script src="{{ asset('assets/js/app.js') }}"></script>
<script src="{{ asset('assets/js/simplebar.min.js') }}"></script>
<script src="{{ asset('assets/js/tom-select.complete.min.js') }}"></script>
<script>
    let settings = {allowEmptyOption: true,};
    new TomSelect('select',settings);
</script>
</body>
</html>
